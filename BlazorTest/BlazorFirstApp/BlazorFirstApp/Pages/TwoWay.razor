@page "/twowaybinding"

<h3>TwoWayBinding</h3>
<p>Current count= @currentCount</p>
<button class="btn btn-primary" @onclick="IncrementCount">Increment me</button>
<TwoWayBinding @bind-Counter =currentCount/>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}